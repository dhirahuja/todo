<h1 align="center"> Listing Companies </h1>
<%= link_to 'New Company', new_plum_path %>

<table style="width:100%">
	<tr>
		<th>Name</th>
		<th>Address</th>
		<th>City</th>
		<th>Country</th>
		<th>Phone</th>
	</tr>

	<% @plums.each do |plum| %>
	<tr align="center">
	<td><%= plum.name %></td>
	<td><%= plum.address %></td>
	<td><%= plum.city %></td>
	<td><%= plum.country %></td>
	<td><%= plum.phone %></td>
	<td><%= link_to 'Show', plum_path(plum) %></td>
	<td><%= link_to 'Edit', edit_plum_path(plum)%></td>
	<td><%= link_to 'Delete', plum_path(plum),
						method: :delete,
						data: { confirm: 'Are you sure ?'} %></td> 
	</tr>
	<% end %>
</table>